<Window x:Class="CafePOS.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CafePOS - Login"
        Height="500"
        Width="850"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="40"
            Background="#FFFDF8"
            BorderBrush="#E8D3C3"
            BorderThickness="2"
            ClipToBounds="True">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT IMAGE PANEL -->
            <Grid Grid.Column="0">
                <Image Source="pack://application:,,,/Data/Resources/login_bg.jpg"
                       Stretch="UniformToFill"/>
                <Border Background="#30000000"/>

                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <TextBlock Text="CafePOS"
                               FontSize="42"
                               Foreground="White"
                               FontFamily="Segoe UI Semilight"
                               FontWeight="Bold"/>
                    <TextBlock Text="the cozy corner"
                               Foreground="#F5E6D3"
                               FontStyle="Italic"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- RIGHT LOGIN PANEL -->
            <Border Grid.Column="1"
                    Background="#FFFDF8"
                    CornerRadius="0,40,40,0">

                <StackPanel VerticalAlignment="Center"
                            Margin="40">

                    <TextBlock Text="Welcome Back"
                               FontSize="28"
                               Foreground="#5D4037"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Enter your access PIN"
                               Foreground="#8D6E63"
                               FontSize="14"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,25"/>

                    <!-- PIN -->
                    <PasswordBox x:Name="PinPasswordBox"
                                 FontSize="22"
                                 HorizontalContentAlignment="Center"
                                 Padding="15"
                                 Background="#F5F0EB"
                                 BorderThickness="0"
                                 MaxLength="4"
                                 Margin="0,0,0,20">
                        <PasswordBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="25"/>
                            </Style>
                        </PasswordBox.Resources>
                    </PasswordBox>

                    <!-- SIGN IN -->
                    <Button Content="SIGN IN"
                            Height="48"
                            Background="#8D6E63"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="LoginButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="25"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <!-- SIGN UP -->
                    <Button Content="Create new account"
                            Margin="0,12,0,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#8D6E63"
                            Cursor="Hand"
                            Click="SignupButton_Click"/>

                    <!-- EXIT -->
                    <Button Content="Exit Application"
                            Margin="0,25,0,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#A1887F"
                            Cursor="Hand"
                            Click="ExitButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
