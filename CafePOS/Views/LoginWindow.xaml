<Window x:Class="CafePOS.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CafePOS - Login"
        Height="500"
        Width="850"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- Main rounded container -->
    <Border CornerRadius="40"
            Background="#FFFDF8"
            BorderBrush="#E8D3C3"
            BorderThickness="2"
            ClipToBounds="True">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- LEFT SIDE (IMAGE) -->
            <Grid Grid.Column="0">
                <!-- Background Image -->
                <Image Source="pack://application:,,,/Data/Resources/login_bg.jpg"
                       Stretch="UniformToFill"/>

                <!-- Dark overlay -->
                <Border Background="#30000000"/>

                <!-- Branding -->
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center">


                    <TextBlock Text="CafePOS"
                               FontSize="42"
                               Foreground="White"
                               FontFamily="Segoe UI Semilight"
                               FontWeight="Bold"
                               HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="10"
                                              ShadowDepth="3"
                                              Opacity="0.7"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock Text="the cozy corner"
                               Foreground="#F5E6D3"
                               FontStyle="Italic"
                               HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="5"
                                              ShadowDepth="1"
                                              Opacity="0.6"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>
            </Grid>

            <!-- RIGHT SIDE (LOGIN FORM) -->
            <Border Grid.Column="1"
                    Background="#FFFDF8"
                    CornerRadius="0,40,40,0">

                <StackPanel VerticalAlignment="Center"
                            Margin="40">

                    <TextBlock Text="Welcome Back"
                               FontSize="28"
                               Foreground="#5D4037"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Please enter your access PIN"
                               Foreground="#8D6E63"
                               FontSize="14"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>

                    <!-- PIN -->
                    <PasswordBox x:Name="PinPasswordBox"
                                 FontSize="22"
                                 HorizontalContentAlignment="Center"
                                 Padding="15"
                                 Background="#F5F0EB"
                                 Foreground="#5D4037"
                                 BorderThickness="0"
                                 Margin="0,0,0,25"
                                 MaxLength="4">
                        <PasswordBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="25"/>
                            </Style>
                        </PasswordBox.Resources>
                    </PasswordBox>

                    <!-- LOGIN BUTTON -->
                    <Button Content="SIGN IN"
                            Height="50"
                            FontSize="15"
                            FontWeight="Bold"
                            Background="#8D6E63"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="LoginButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="25"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <!-- EXIT -->
                    <Button Content="Exit Application"
                            Margin="0,30,0,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#A1887F"
                            FontSize="13"
                            Cursor="Hand"
                            Click="ExitButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
