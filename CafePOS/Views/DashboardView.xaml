<UserControl x:Class="CafePOS.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Sales Dashboard" FontSize="28" FontWeight="Bold" Foreground="{StaticResource CafeDarkBrown}" Margin="0,0,0,25"/>

        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding HourlySales}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource MenuCardStyle}" Margin="0,0,10,15" Padding="20">
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="10" Height="40" Background="{StaticResource CafeMediumBrown}" CornerRadius="5" Margin="0,0,20,0"/>
                                    <TextBlock Text="{Binding Key, StringFormat='Hour {0}:00'}" FontSize="18" VerticalAlignment="Center" Foreground="{StaticResource CafeDarkBrown}"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Value, StringFormat='{}{0:N2} RON'}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource CashGreen}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>