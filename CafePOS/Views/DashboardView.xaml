<UserControl x:Class="CafePOS.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource CafeBackground}">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="300"/> 
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Performance Analytics" FontSize="28" FontWeight="Bold" Foreground="{StaticResource CafeDarkBrown}" Margin="0,0,0,20"/>

        <Border Grid.Row="1" Style="{StaticResource MenuCardStyle}" Margin="0,0,10,25" Padding="15">
            <ContentControl x:Name="ChartHost" />
        </Border>

        <ScrollViewer Grid.Row="2">
            </ScrollViewer>
    </Grid>
</UserControl>