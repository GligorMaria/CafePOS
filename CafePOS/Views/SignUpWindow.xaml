<Window x:Class="CafePOS.Views.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CafePOS - Register"
        Height="550"
        Width="850"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="40"
            Background="#FFFDF8"
            BorderBrush="#E8D3C3"
            BorderThickness="2"
            ClipToBounds="True">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- LEFT IMAGE PANEL -->
            <Grid Grid.Column="0">
                <Image Source="pack://application:,,,/Data/Resources/login_bg.jpg"
                       Stretch="UniformToFill">
                    <Image.Effect>
                        <BlurEffect Radius="5"/>
                    </Image.Effect>
                </Image>

                <Border Background="#30000000"/>

                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Join the Team"
                               FontSize="36"
                               Foreground="White"
                               FontWeight="Bold"
                               FontFamily="Segoe UI Semilight">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="10"
                                              ShadowDepth="3"
                                              Opacity="0.7"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>
            </Grid>

            <!-- RIGHT FORM PANEL -->
            <Border Grid.Column="1"
                    Background="#FFFDF8"
                    CornerRadius="0,40,40,0">

                <StackPanel VerticalAlignment="Center"
                            Margin="40">

                    <TextBlock Text="Create Account"
                               FontSize="26"
                               Foreground="#5D4037"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,25"/>

                    <!-- NAME -->
                    <TextBlock Text="Full Name"
                               Foreground="#8D6E63"
                               Margin="10,0,0,5"/>

                    <TextBox x:Name="NameTextBox"
                             Padding="12"
                             Background="#F5F0EB"
                             BorderThickness="0"
                             Margin="0,0,0,15">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="20"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <!-- PIN -->
                    <TextBlock Text="Access PIN (4 digits)"
                               Foreground="#8D6E63"
                               Margin="10,0,0,5"/>

                    <PasswordBox x:Name="PinPasswordBox"
                                 MaxLength="4"
                                 Padding="12"
                                 Background="#F5F0EB"
                                 BorderThickness="0"
                                 Margin="0,0,0,25">
                        <PasswordBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="20"/>
                            </Style>
                        </PasswordBox.Resources>
                    </PasswordBox>

                    <!-- REGISTER -->
                    <Button Content="REGISTER"
                            Height="50"
                            Background="#8D6E63"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="SignUpButton_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="25"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <!-- BACK -->
                    <Button Content="Back to Login"
                            Margin="0,20,0,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#A1887F"
                            Cursor="Hand"
                            Click="BackToLogin_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
