<Window x:Class="CafePOS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:CafePOS.Views"
        xmlns:vm="clr-namespace:CafePOS.ViewModels"
        Title="Cafe POS" Height="650" Width="1050" Background="{StaticResource CafeBackground}">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}"><views:DashboardView /></DataTemplate>
        <DataTemplate DataType="{x:Type vm:OrderViewModel}"><views:OrderView /></DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="{StaticResource CafeDarkBrown}" CornerRadius="0,35,35,0" Padding="15">
            <StackPanel>
                <TextBlock Text="â˜• CafePOS" Foreground="White" FontSize="26" FontWeight="Bold" Margin="0,20,0,40" HorizontalAlignment="Center"/>
                <Button Content="New Order" Style="{StaticResource CafeButtonStyle}" Command="{Binding ShowOrderCommand}" Margin="0,10"/>
                <Button Content="History" Style="{StaticResource CafeButtonStyle}" Command="{Binding ShowHistoryCommand}" Margin="0,10" Opacity="0.7"/>
            </StackPanel>
        </Border>

        <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}" Margin="10"/>
    </Grid>
</Window>