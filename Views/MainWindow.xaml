<Window x:Class="TheCozyCupPOS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Title="The Cozy Cup POS" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu List -->
        <ListBox x:Name="MenuList" Grid.Column="0" DisplayMemberPath="Name" />

        <!-- Order & Actions -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Current Order" FontSize="18" FontWeight="Bold"/>
            <ListBox x:Name="OrderList" Height="200"/>
            <TextBlock x:Name="TotalText" FontSize="16" Margin="5"/>
            <Button x:Name="CompleteSaleButton" Content="Complete Sale" Width="150" Height="40"/>
        </StackPanel>
    </Grid>
</Window>
